<div class='mt-4'>
  <h3>Sửa khoá học</h3>
  <form method='post' action='/courses/{{course._id}}?_method=PUT'>
    <div class='form-group'>
      <label for='description'>Description</label>
      <input
        type='text'
        class='form-control'
        id='description'
        name='description'
        value='{{course.description}}'
      />
    </div>
    <div class='form-group'>
      <label for='name'>Name</label>
      <input
        type='text'
        class='form-control'
        id='name'
        name='name'
        value='{{course.name}}'
      />
    </div>
    <div class='form-group'>
      <label for='image'>Image</label>
      <input
        type='text'
        class='form-control'
        id='image'
        name='image'
        value='{{course.image}}'
      />
    </div>
    <div class='form-group'>
      <label for='videoId'>VideoId</label>
      <input
        type='text'
        class='form-control'
        id='videoId'
        name='videoId'
        value='{{course.videoId}}'
      />
    </div>
    <button type='submit' class='btn btn-primary'>Sửa khoá học</button>
  </form>
</div>